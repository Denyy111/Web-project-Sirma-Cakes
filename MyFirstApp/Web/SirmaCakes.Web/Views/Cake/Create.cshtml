@using SirmaCakes.Web.ViewModels.ViewModels.Sweets
@using SirmaCakes.Web.ViewModels.Models
@model CreateCakeInputModel
@{
    this.ViewData["Title"] = "Add new cake";
    var categoryItems = this.Model.CategoriesItems.Select(x => new SelectListItem(x.Value, x.Key));
   
}

@*Otbelqzvame kakva e zaqvkata*@
@*Check get*@
@*Slagame vsichki properties ot view modela*@
@*Label e imeto nad samoto pole vyv formata*@
@*Form-group pravi poletat podredeni, class="form-control - poletat po zaformena kutijkata"*@
@*<div asp-validation-summary="All"></div> - shte vyrne vsichki validacionni greshki na klienta*@
@*Span s nego pod samoto polence izpisvame greshkata,ako ima takava*@
@*Mnogo redovite poleta ne sa input poleta a sa <textarea rows="4" asp-for="Description" class="form-control"></textarea>, kato description*@
@*Select pomaga da si napravim dropdown na enum, za da izlizat vyv formata // asp-items - ot kyde da se vzemat obektite na tozi dropdown i mahame input poleto *@

<form method="post" class="col-md-6 offset-md-3">
    <h1>@this.ViewData["Title"]</h1>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="CakeName"></label>
        <input asp-for="CakeName" class="form-control" />
        <span asp-validation-for="CakeName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Calories"></label>
        <input asp-for="Calories" class="form-control" />
        <span asp-validation-for="Calories" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LongDescription"></label>
        <textarea rows="5" asp-for="LongDescription" class="form-control" row="7"></textarea>
        <span asp-validation-for="LongDescription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ShortDescription"></label>
        <textarea rows="5" asp-for="ShortDescription" class="form-control" row="4"></textarea>
        <span asp-validation-for="ShortDescription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" class="form-control" asp-items="categoryItems"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    @*butona submit da byde krasiv*@
    <input type="submit" class="btn btn-primary" />
</form>
